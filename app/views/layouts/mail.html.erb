<%= body do %>
  <%=  header do %>
    <img src="<%= InsteddRails.url %>/theme/images/header/logos/<%= application_name.underscore %>.png"/>
    <img src="<%= InsteddRails.url %>/theme/images/header/shadow_small.png"/>
  <% end %>
  <%= content do %>
    <%= yield %>
  <% end %>
  <%= footer do %>
    <hr/>
    <p>
      <%= t("do_you_have_questions_or_need_help_contact_us_at", :default => "Do you have questions or need help? Contact us at") %>
      <%= link "mailto:support@instedd.org?subject=#{application_name.titleize}" do %>
        support@instedd.org
      <% end %>
    </p>
  <% end %>
<% end %>
